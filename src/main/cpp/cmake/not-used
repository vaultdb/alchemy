add_custom_command(
		OUTPUT "${vdb_proto_srcs}" "${vdb_proto_hdrs}"
		COMMAND ${PROTOC}
		ARGS
		--cpp_out "${CMAKE_CURRENT_BINARY_DIR}/rpc"
		-I "${vdb_proto_path}"
		"${vdb_proto}"
		DEPENDS "${vdb_proto}")

	      
add_custom_target(rpc_proto_gen ALL DEPENDS ${vdb_proto} ${vdb_proto_srcs} ${vdb_proto_headers})

